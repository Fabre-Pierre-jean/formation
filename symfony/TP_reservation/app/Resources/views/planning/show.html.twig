{% extends 'base.html.twig' %}

{% block body %}
    <h1>Planning</h1>

    <table>
        <tbody>
            <tr>
                <th class="col">Id</th>
                <td>{{ planning.id }}</td>
            </tr>
            <tr>
                <th class="col">Halfday</th>
                <td>{% if planning.halfDay %}Matin{% else %}Aprem{% endif %}</td>
            </tr>
            <tr>
                <th class="col">Day</th>
                <td>{{ planning.day }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('planning_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('planning_edit', { 'id': planning.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('planning_new') }}">Create a new planning</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
