{% extends 'base.html.twig' %}

{% block body %}
    <h1>Author list</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Titre</th>
                <th scope="col">Texte</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for author in author %}
            <tr>
                <td><a href="{{ path('author.show', { 'id': author.id }) }}">{{ author.id }}</a></td>
                <td>{{ author.lastname }}</td>
                <td>{{ author.firstname }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('author.show', { 'id': author.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('author.edit', { 'id': author.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('author.new') }}">Create a new author</a>
        </li>
    </ul>
{% endblock %}
